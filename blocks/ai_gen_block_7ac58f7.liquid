{% doc %}
  @prompt
    I want to build a 3 by 3 grid of product categories represented by icons. The product categories are heart health, general health, sleep, brain health, weight, sexual health, allergy, performance, and energy.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    padding: {{ block.settings.section_padding }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-category-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.border_radius }}px;
    text-decoration: none;
    color: {{ block.settings.text_color }};
    transition: all 0.3s ease;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    min-height: {{ block.settings.item_height }}px;
  }

  .ai-category-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.item_hover_background }};
    color: {{ block.settings.text_hover_color }};
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_lift | times: 2 }}px {{ block.settings.hover_lift | times: 4 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-category-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: {{ block.settings.icon_margin }}px;
    color: {{ block.settings.icon_color }};
    transition: color 0.3s ease;
  }

  .ai-category-item-{{ ai_gen_id }}:hover .ai-category-icon-{{ ai_gen_id }} {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-category-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    text-align: center;
    margin: 0;
    line-height: 1.2;
  }

  @media screen and (max-width: 749px) {
    .ai-category-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
      padding: {{ block.settings.section_padding | times: 0.75 }}px;
    }

    .ai-category-item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.75 }}px;
      min-height: {{ block.settings.item_height | times: 0.85 }}px;
    }

    .ai-category-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.85 }}px;
      height: {{ block.settings.icon_size | times: 0.85 }}px;
    }

    .ai-category-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

